{
	"compilerOptions": {
		"lib": [
			"ES2020",
			"ESNext",
		],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"target": "ES2020",
		"module": "ES2020",
		"allowSyntheticDefaultImports": true,
		"outDir": "compiled",
		"sourceMap": true,
	},
	"exclude": [
		"node_modules",
		"private"
	],
	"include": [
		"src/**/*.ts",
	]
}