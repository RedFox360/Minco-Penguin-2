generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("SRV")
}

model Profile {
  id                 String    @id @default(auto()) @map("_id") @db.ObjectId
  userId             String    @unique
  mincoDollars       Int       @default(1000)
  bank               Int       @default(0)
  lastDailyClaim     DateTime?
  bsPokerWins        Int       @default(0)
  bsPokerGamesPlayed Int       @default(0)
}
